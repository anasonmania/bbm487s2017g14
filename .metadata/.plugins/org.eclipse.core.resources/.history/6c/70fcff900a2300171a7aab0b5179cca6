package application.controller;

import java.io.IOException;
import java.net.URL;
import java.util.ResourceBundle;

import application.Main;
import javafx.animation.FadeTransition;
import javafx.event.ActionEvent;
import javafx.fxml.FXMLLoader;
import javafx.fxml.Initializable;
import javafx.scene.Node;
import javafx.scene.Parent;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.GridPane;
import javafx.stage.Stage;
import javafx.util.Duration;

public class HomePageLibrarian implements Initializable {

	public TextField tfSearch;
	public GridPane lnSearch;
	public Label lbName, lbSchoolidentity;
	public Button btnGrid1, btnGrid2, btnGrid3, btnGrid4;

	private FadeTransition showBtn1;
	private FadeTransition hideBtn1;
	private FadeTransition showBtn2;
	private FadeTransition hideBtn2;
	private FadeTransition showBtn3;
	private FadeTransition hideBtn3;
	private FadeTransition showBtn4;
	private FadeTransition hideBtn4;



	@Override
	public void initialize(URL location, ResourceBundle resources) {
		// TODO Auto-generated method stub
		lnSearch.setStyle("-fx-opacity: 0.4");
		tfSearch.setPromptText("Search books");
		lbName.setText(Main.currentUser.getName() + " " + Main.currentUser.getSurname());
		lbSchoolidentity.setText(Integer.toString(Main.currentUser.getSchoolNumber()));

		btnGrid1.setOpacity(0);
		setOpacityAnims();
		showBtn1.play();
		showBtn2.play();
		showBtn3.setDelay(Duration.millis(600.0d));
		showBtn3.play();
		showBtn4.setDelay(Duration.millis(900.0d));
		showBtn4.play();

	}

	public void logout(ActionEvent event) throws IOException{
		Main.currentUser.logout();
		hideBtn1.play();
		hideBtn2.play();
		hideBtn3.play();
		hideBtn4.play();
		Parent newParent = FXMLLoader.load(getClass().getResource("../view/Login.fxml"));
		Scene newScreen = new Scene(newParent);
		Stage appStage = (Stage) ((Node) event.getSource()).getScene().getWindow();
		appStage.setScene(newScreen);
		appStage.show();
	}

	public void lineSearch() {
		lnSearch.setStyle("-fx-opacity: 1.0;");
	}

	public void setOpacityAnims(){

		showBtn1 = new FadeTransition(Duration.millis(300.0d), btnGrid1);
		showBtn1.setFromValue(0);
		showBtn1.setToValue(0.8);

		hideBtn1 = new FadeTransition(Duration.millis(300.0d), btnGrid1);
		hideBtn1.setFromValue(0.8);
		hideBtn1.setToValue(0);

		showBtn2 = new FadeTransition(Duration.millis(300.0d), btnGrid2);
		showBtn2.setFromValue(0);
		showBtn2.setToValue(0.8);
		showBtn2.setDelay(Duration.millis(300.0d));

		hideBtn2 = new FadeTransition(Duration.millis(300.0d), btnGrid2);
		hideBtn2.setFromValue(0.8);
		hideBtn2.setToValue(0);

		showBtn3 = new FadeTransition(Duration.millis(300.0d), btnGrid3);
		showBtn3.setFromValue(0);
		showBtn3.setToValue(0.8);

		hideBtn3 = new FadeTransition(Duration.millis(300.0d), btnGrid3);
		hideBtn3.setFromValue(0.8);
		hideBtn3.setToValue(0);

		showBtn4 = new FadeTransition(Duration.millis(300.0d), btnGrid4);
		showBtn4.setFromValue(0);
		showBtn4.setToValue(0.8);

		hideBtn4 = new FadeTransition(Duration.millis(300.0d), btnGrid4);
		hideBtn4.setFromValue(0.8);
		hideBtn4.setToValue(0);

	}

}
